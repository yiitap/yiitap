{
	"name": "@yiitap/vue",
	"description": "A WYSIWYG rich-text block-based editor built on top of tiptap.",
	"version": "0.5.0",
	"private": false,
	"author": {
		"name": "Yiitap",
		"email": "pileaxai@gmail.com"
	},
	"homepage": "https://github.com/yiitap/yiitap",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"typings": "types/index.d.ts",
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./*": "./*"
	},
	"files": [
		"dist",
		"types",
		"README.md"
	],
	"scripts": {
		"dev-server": "pnpm --parallel vite",
		"dev-types": "vue-tsc  --noEmit -p tsconfig.app.json --watch",
		"build": "pnpm build-lib && pnpm build-types",
		"build-lib": "vite build",
		"build-types": "vue-tsc --emitDeclarationOnly --declaration -p tsconfig.app.json",
		"lint": "eslint 'src/**/*.{ts,vue}'",
		"test": "vitest",
		"test-ci": "vitest --run"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.7.4",
		"@tiptap/core": "^3.7.0",
		"@tiptap/extension-blockquote": "^3.7.0",
		"@tiptap/extension-bubble-menu": "^3.7.0",
		"@tiptap/extension-code-block-lowlight": "^3.7.0",
		"@tiptap/extension-color": "^3.7.0",
		"@tiptap/extension-document": "^3.7.0",
		"@tiptap/extension-emoji": "^3.7.0",
		"@tiptap/extension-font-family": "^3.7.0",
		"@tiptap/extension-heading": "^3.7.0",
		"@tiptap/extension-highlight": "^3.7.0",
		"@tiptap/extension-horizontal-rule": "^3.7.0",
		"@tiptap/extension-image": "^3.7.0",
		"@tiptap/extension-link": "^3.7.0",
		"@tiptap/extension-list": "^3.7.0",
		"@tiptap/extension-mention": "^3.7.0",
		"@tiptap/extension-paragraph": "^3.7.0",
		"@tiptap/extension-table": "^3.7.0",
		"@tiptap/extension-text": "^3.7.0",
		"@tiptap/extension-text-align": "^3.7.0",
		"@tiptap/extension-text-style": "^3.7.0",
		"@tiptap/extension-typography": "^3.7.0",
		"@tiptap/extension-underline": "^3.7.0",
		"@tiptap/extensions": "^3.7.0",
		"@tiptap/pm": "^3.7.0",
		"@tiptap/starter-kit": "^3.7.0",
		"@tiptap/suggestion": "^3.7.0",
		"@tiptap/vue-3": "^3.7.0",
		"@yiitap/core": "workspace:*",
		"@yiitap/extension-ai-block": "workspace:*",
		"@yiitap/extension-callout": "workspace:*",
		"@yiitap/extension-char-command": "workspace:*",
		"@yiitap/extension-color-highlighter": "workspace:*",
		"@yiitap/extension-focus": "workspace:*",
		"@yiitap/extension-image": "workspace:*",
		"@yiitap/extension-placeholder": "workspace:*",
		"@yiitap/extension-selection-decoration": "workspace:*",
		"@yiitap/extension-table": "workspace:*",
		"@yiitap/extension-table-wrapper": "workspace:*",
		"@yiitap/extension-trailing-node": "workspace:*",
		"@yiitap/extension-unique-id": "workspace:*",
		"@yiitap/extension-video": "workspace:*",
		"@yiitap/util-emoji": "workspace:*",
		"@yiitap/vue": "workspace:*",
		"lowlight": "^3.3.0",
		"tippy.js": "^6.3.7",
		"uuid": "^10.0.0"
	},
	"peerDependencies": {
		"@types/uuid": "^10.0.0",
		"markdown-it": "^14.1.0",
		"openai": "^4.88.0",
		"vue": "^3.3.8"
	},
	"devDependencies": {
		"rollup-plugin-visualizer": "^5.14.0",
		"vite-plugin-inspect": "^11.0.0",
		"vue-tsc": "^2.2.8"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yiitap/yiitap"
	},
	"bugs": {
		"url": "https://github.com/yiitap/yiitap/issues"
	},
	"keywords": [
		"editor",
		"wysiwyg",
		"block",
		"notion",
		"yiitap",
		"tiptap",
		"typescript",
		"vue"
	]
}
